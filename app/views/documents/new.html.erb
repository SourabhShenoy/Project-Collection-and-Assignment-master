<% provide(:title, 'Upload roject Documents') %>
<h3>Add Project Documentation</h3>
<br>
<script type="text/javascript">

jQuery(function(){
  $('form .toggle').hide();

$(".my-select").change(function()
{
  $('form .toggle').hide();
  // get value from dropdown
  var divClass = $('.my-select').val();

    if(divClass== "link")
         $('.' + "link").show();

    else
        $('.' + "file").show()
});
});
</script>



<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <%= form_for(@document) do |f| %>
           
             <%= fields_for @project do |fa| %>
                <%=fa.label :title %>
                <%=fa.text_field :title, :disabled => true%>
            <% end %>


        <%# Use this logic for iteration documnets later %>
        <%= f.label "Document Type"%>
        <%= f.select :doc_type, @options ,  {:prompt=>"Select document type"}, {:class => "my-select"}%>

      <%= f.label "Description"%>
    <%= f.text_field :name, class: "form_control", placeholder: "Iteration Report, Github Link, Client Video, etc . . . " %>

        <%= f.label :Link, class:"toggle link" %><br>
        <%= f.text_field :link, class: "form_control toggle link" %>

        <%= f.label :File, class:"toggle file" %><br>
        <%= f.file_field :filein , class:"toggle file" %>


        <%= hidden_field_tag :curr_project, @project.id %>

            <div class="col-md-6 col-md-offset-3">
                <%= f.submit :Submit, class: "btn btn-primary" %>
            </div>

        <% end %>

    </div>
</div>

