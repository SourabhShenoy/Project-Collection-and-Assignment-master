<% provide(:title, 'Join a Team') %>
<h1>Join a Team</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(:relationship, url: jointeam_path) do |f| %>

      <%#= f.label :name %>
      <%#= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :name%>
      <% options = options_from_collection_for_select(@all_teams, 'id', 'name') %>
      <%= f.select :all_val,  options %>
      
      


      <%= f.label "Please enter your team's code" %>
      <%= f.text_field :code, class: 'form-control' %>

      <div class="col-md-6 col-md-offset-3">
        <%= f.submit "Join Team", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>